<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zuzhi.tianyou.activity.ServiceClassListActivity">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_class_level_one"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_service_class_list_synthesize"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/synthesize"
            android:textColor="@color/color_bg_button_main_normal"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="@dimen/height_separation_line"
            android:layout_height="10dp"
            android:background="@color/color_separation_line" />

        <TextView
            android:id="@+id/tv_service_class_list_sales_volume"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sales_volume"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/font_14" />

        <View
            android:layout_width="@dimen/height_separation_line"
            android:layout_height="10dp"
            android:background="@color/color_separation_line" />

        <LinearLayout
            android:clickable="true"
            android:id="@+id/ll_service_class_list_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_service_class_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textColor="@color/color_text_hint"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/iv_service_class_list_price"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/ser_down" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/height_separation_line"
            android:layout_height="10dp"
            android:background="@color/color_separation_line" />

        <TextView
            android:id="@+id/tv_service_class_list_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/location"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/font_14" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_separation_line"
        android:background="@color/color_separation_line" />

    <android.support.v7.widget.RecyclerView
        android:overScrollMode="never"
        android:background="@color/color_white"
        android:id="@+id/rv_service_class_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
