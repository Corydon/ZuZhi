<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/color_bg_identifying_code_disable"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_item_viepager_topic_orientation1"
        android:background="@color/color_white"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_index"
        android:paddingRight="@dimen/padding_index"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_item_viepager_topic_title_orientation1"
            android:layout_marginTop="@dimen/margin_edit_follow_items"
            android:text="验资报告"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_bg_button_main_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_viepager_topic_info_orientation1"
            android:layout_marginTop="5dp"
            android:text="财税服务省力省心"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/iv_item_viepager_topic_img_orientation1"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/temp_vp_report1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item_viepager_topic_orientation2"
        android:layout_marginLeft="@dimen/height_separation_line"
        android:background="@color/color_white"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_index"
        android:paddingRight="@dimen/padding_index"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_item_viepager_topic_title_orientation2"
            android:layout_marginTop="@dimen/margin_edit_follow_items"
            android:text="审计报告"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_bg_button_main_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_viepager_topic_info_orientation2"
            android:layout_marginTop="5dp"
            android:text="财税服务省力省心"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_item_viepager_topic_img_orientation2"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/temp_vp_report2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_item_viepager_topic_orientation3"
        android:layout_marginLeft="@dimen/height_separation_line"
        android:background="@color/color_white"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_index"
        android:paddingRight="@dimen/padding_index"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_item_viepager_topic_title_orientation3"
            android:layout_marginTop="@dimen/margin_edit_follow_items"
            android:text="税审报告"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_bg_button_main_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_viepager_topic_info_orientation3"
            android:layout_marginTop="5dp"
            android:text="财税服务省力省心"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/iv_item_viepager_topic_img_orientation3"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/temp_vp_report3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>