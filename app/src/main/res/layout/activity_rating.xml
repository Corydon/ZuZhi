<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_identifying_code_disable"
    android:orientation="vertical"
    tools:context="com.zuzhi.tianyou.activity.RatingActivity">

    <include layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/temp_icon1" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/hint_rating"
            android:textColor="@color/color_normal_text"
            android:textColorHint="@color/color_text_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_13" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:layout_marginTop="1px"
        android:background="@color/color_white"
        android:paddingLeft="10dp"
        android:paddingRight="18dp">

        <TextView
            android:id="@+id/tv_rating_complete_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="@string/complete_quality"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_rating_work_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rating_complete_quality"
            android:layout_marginTop="20dp"
            android:text="@string/work_speed"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/font_14" />

        <TextView
            android:id="@+id/tv_rating_service_attitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rating_work_speed"
            android:layout_marginTop="20dp"
            android:text="@string/service_attitude"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/font_14" />

        <RatingBar
            android:id="@+id/rb_rating_complete_quality"
            style="@style/starRatingBar_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp" />

        <RatingBar
            android:id="@+id/rb_rating_work_speed"
            style="@style/starRatingBar_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rb_rating_complete_quality"
            android:layout_marginTop="3dp" />

        <RatingBar
            android:id="@+id/rb_rating_service_attitude"
            style="@style/starRatingBar_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rb_rating_work_speed"
            android:layout_marginTop="3dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_separation_line"
        android:background="@color/color_separation_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_bg_button_main_normal"
        android:gravity="center"
        android:text="@string/submit_rating"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_18" />
</LinearLayout>
