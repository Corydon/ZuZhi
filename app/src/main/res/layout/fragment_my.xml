<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bg_identifying_code_disable"
            android:fillViewport="true"
            android:scrollbars="none">

    <LinearLayout
        android:id="@+id/ll_fragment_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_identifying_code_disable"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_my_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_my_titlebg"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/my_img"/>

            <ImageView
                android:id="@+id/im_my_header"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_alignBottom="@id/im_my_titlebg"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/my_empty"/>
            <TextView
                android:id="@+id/tv_my_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杨杨"
                android:textSize="@dimen/font_size_level_one"
                android:textColor="@color/color_white"
                android:layout_alignTop="@id/im_my_header"
                android:layout_alignBottom="@id/im_my_header"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/im_my_header"
android:layout_marginLeft="15dp"
                />
            <ImageView
                android:id="@+id/im_my_notice"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/my_notice"/>

            <ImageView
                android:id="@+id/im_my_set"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignTop="@+id/im_my_notice"
                android:layout_marginRight="22dp"
                android:layout_toLeftOf="@+id/im_my_notice"
                android:layout_toStartOf="@+id/im_my_notice"
                android:src="@drawable/my_set"/>

            <ImageView
                android:id="@+id/im_my_info"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignBottom="@id/im_my_titlebg"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="35dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_click_white"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_my_order"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_order"/>

                <TextView
                    style="@style/myText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="@string/my_order"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/my_click_grey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_separation_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp"
                    android:background="@color/color_separation_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_my_collection"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_collection"/>

                <TextView
                    style="@style/myText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="@string/my_collection"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/my_click_grey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_separation_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp"
                    android:background="@color/color_separation_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_my_coupons"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_coupons"/>

                <TextView
                    style="@style/myText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="@string/my_coupons"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/my_click_grey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_separation_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp"
                    android:background="@color/color_separation_line"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_my_opinion"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_opinion"/>
                <TextView
                    style="@style/myText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="@string/my_opinion"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/my_click_grey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_separation_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp"
                    android:background="@color/color_separation_line"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_my_help"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/my_help"/>

                <TextView
                    style="@style/myText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="@string/my_help"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/my_click_grey"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_separation_line"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="28dp"
                    android:background="@color/color_separation_line"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_my_about"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/my_us"/>

            <TextView
                style="@style/myText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="@string/my_about"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_click_grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:background="@color/color_separation_line"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_my_exit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            android:paddingLeft="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:src="@drawable/my_exit"/>

            <TextView
                style="@style/myText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="@string/my_exit"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/my_click_grey"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:background="@color/color_separation_line"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>

