<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_weight="3"
    android:background="@color/color_bg_identifying_code_disable"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/ll_item_viepager_topic_relative1"
        android:background="@color/color_white"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_index"
        android:paddingRight="@dimen/padding_index"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_item_viepager_topic_title_relative1"
            android:layout_marginTop="@dimen/margin_edit_follow_items"
            android:text="财会咨询"
            android:textSize="@dimen/font_14"
            android:textColor="@color/color_bg_button_main_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_item_viepager_topic_info_relative1"
            android:layout_marginTop="5dp"
            android:text="高效开发"
            android:textSize="@dimen/font_12"
            android:textColor="@color/color_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:id="@+id/iv_item_viepager_topic_img_relative1"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/temp_vp_consult1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/height_separation_line"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rl_item_viepager_topic_relative2"
            android:layout_marginLeft="@dimen/height_separation_line"
            android:background="@color/color_white"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_index"
            android:paddingRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_item_viepager_topic_title_relative2"
                android:layout_marginTop="@dimen/margin_edit_follow_items"
                android:text="税务咨询"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_bg_button_main_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_item_viepager_topic_info_relative2"
                android:layout_below="@+id/tv_item_viepager_topic_title_relative2"
                android:layout_marginTop="5dp"
                android:text="财税服务省力省心"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_text_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_item_viepager_topic_img_relative2"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:background="@drawable/temp_vp_consult2"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_viepager_topic_relative3"
            android:layout_marginLeft="@dimen/height_separation_line"
            android:background="@color/color_white"
            android:layout_marginTop="@dimen/height_separation_line"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_index"
            android:paddingRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/tv_item_viepager_topic_title_relative3"
                android:layout_marginTop="@dimen/margin_edit_follow_items"
                android:text="投资咨询"
                android:textSize="@dimen/font_14"
                android:textColor="@color/color_bg_button_main_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_item_viepager_topic_info_relative3"
                android:layout_below="@+id/tv_item_viepager_topic_title_relative3"
                android:layout_marginTop="5dp"
                android:text="财税服务省力省心"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_text_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_item_viepager_topic_img_relative3"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                android:background="@drawable/temp_vp_consult3"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>