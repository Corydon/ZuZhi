<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_identifying_code_disable"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/color_white"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tv_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="公司成立5年"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/font_size_class_level" />

            <LinearLayout
                android:id="@+id/ll_complete_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_create_time"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ser_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/complete_quality"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/font_size_level_three" />

                <TextView
                    android:id="@+id/tv_company_details_complete_quality_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="5.0分"
                    android:textColor="@color/color_text_orange"
                    android:textSize="@dimen/font_size_level_three" />

                <ProgressBar
                    android:id="@+id/pb_company_details_complete_quality_rating"
                    style="@style/MyProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:progress="30" />

                <TextView
                    android:id="@+id/tv_company_details_complete_quality_higher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高3.67%"
                    android:textColor="@color/color_text_hint_default_search"
                    android:textSize="@dimen/font_size_level_three" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_work_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_complete_quality"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ser_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/work_speed"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/font_size_level_three" />

                <TextView
                    android:id="@+id/tv_company_details_work_speed_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="5.0分"
                    android:textColor="@color/color_text_orange"
                    android:textSize="@dimen/font_size_level_three" />

                <ProgressBar
                    android:id="@+id/pb_company_details_work_speed_rating"
                    style="@style/MyProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:progress="30" />

                <TextView
                    android:id="@+id/tv_company_details_work_speed_higher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高3.67%"
                    android:textColor="@color/color_text_hint_default_search"
                    android:textSize="@dimen/font_size_level_three" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_service_attitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_work_speed"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:background="@drawable/ser_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/service_attitude"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/font_size_level_three" />

                <TextView
                    android:id="@+id/tv_company_details_service_attitude_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="5.0分"
                    android:textColor="@color/color_text_orange"
                    android:textSize="@dimen/font_size_level_three" />

                <ProgressBar
                    android:id="@+id/pb_company_details_service_attitude_rating"
                    style="@style/MyProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:progress="30" />

                <TextView
                    android:id="@+id/tv_company_details_service_attitude_higher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高3.67%"
                    android:textColor="@color/color_text_hint_default_search"
                    android:textSize="@dimen/font_size_level_three" />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_separation_line"
            android:background="@color/color_separation_line" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_company_details_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/color_white"
            tools:listitem="@layout/item_recyclerview_certificate" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:text="@string/temp_details"
            android:textColor="@color/color_text_hint"
            android:textSize="@dimen/font_size_class_level" />
    </LinearLayout>
</ScrollView>
