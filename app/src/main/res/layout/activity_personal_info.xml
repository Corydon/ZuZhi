<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_identifying_code_disable"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <RelativeLayout
            android:id="@+id/rl_my_coupons"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/head_portrait"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/color_bg_title_bar"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/iv_rightView"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/my_click_gray" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_personal_head"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_rightView"
                android:src="@drawable/temp_vp_master1"
                app:civ_border_color="@color/color_separation_line"
                app:civ_border_width="1dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_separation_line"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="28dp"
                android:background="@color/color_separation_line" />>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                style="@style/myText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/real_name" />

            <TextView
                android:id="@+id/tv_personal_name"
                style="@style/myText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="杨阳"
                android:textColor="@color/color_text_hint" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_separation_line"
        android:layout_alignParentBottom="true"
        android:background="@color/color_separation_line" />
</LinearLayout>
