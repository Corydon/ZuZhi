<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_bg_identifying_code_disable"
              android:orientation="vertical">

    <include layout="@layout/title_bar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="56dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/my_phone"/>
        <RelativeLayout
            android:layout_marginTop="47dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_phone_num"
                android:layout_centerVertical="true"
                android:textColor="@color/color_text_hint"
                android:textSize="@dimen/font_14"/>
            <TextView
                android:id="@+id/tv_get_phoneNum"
                android:layout_toRightOf="@id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18800000000"
                android:textColor="@color/color_bg_title_bar"
                android:textSize="@dimen/font_18"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_modify_cellphone_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/height_button_main"
                android:background="@drawable/button_main"
                android:focusable="true"
                android:text="@string/modify_phone_num"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_18" />

        </LinearLayout>


            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_phone_num_prompt"
                android:textSize="@dimen/font_12"
                android:textColor="@color/color_text_hint"
                android:textAppearance="?android:attr/textAppearanceMedium"/>


    </LinearLayout>

</LinearLayout>
