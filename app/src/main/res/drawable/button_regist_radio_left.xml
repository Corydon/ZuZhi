<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/color_bg_button_main_normal" />
            <corners android:bottomLeftRadius="17dp" android:topLeftRadius="17dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape>
            <stroke android:width="1px" android:color="@color/color_bg_button_main_normal" />
            <solid android:color="@color/color_white" />
            <corners android:bottomLeftRadius="17dp" android:topLeftRadius="17dp" />
        </shape>
    </item>

</selector>
