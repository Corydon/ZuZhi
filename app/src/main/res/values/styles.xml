    <!--</style>-->

    <style name="starRatingBar_small" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable_star</item>
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:maxWidth">12dp</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="starRatingBar_big" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable_star_big</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:maxHeight">33dp</item>
        <item name="android:minWidth">33dp</item>
        <item name="android:maxWidth">33dp</item>
        <item name="android:isIndicator">false</item>
    </style>

</resources>